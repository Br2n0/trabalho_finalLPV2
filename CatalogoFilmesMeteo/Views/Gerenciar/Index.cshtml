@model IEnumerable<CatalogoFilmesMeteo.Models.Filme>
@inject CatalogoFilmesMeteo.Services.IServicoTmdbApi TmdbService

@{
    ViewData["Title"] = "Meu Catálogo";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-5 fw-bold">
                <i class="fas fa-list text-primary"></i> Meu Catálogo de Filmes
            </h1>
            <p class="text-muted">
                <i class="fas fa-film me-1"></i>@Model.Count() filme(s) no catálogo
            </p>
        </div>
        <div>
            <a asp-controller="Busca" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Adicionar Filme
            </a>
            <div class="btn-group ms-2">
                <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-2"></i>Exportar
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" asp-controller="Filme" asp-action="ExportCsv">
                            <i class="fas fa-file-csv me-2"></i>Exportar CSV
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Filme" asp-action="ExportExcel">
                            <i class="fas fa-file-excel me-2"></i>Exportar Excel
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var filme in Model)
        {
            var posterUrl = TmdbService.ConstruirUrlPoster(filme.PosterPath, "w300");
            
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm border-0 filme-card">
                    <img src="@posterUrl" 
                         class="card-img-top" 
                         alt="@filme.Titulo"
                         onerror="this.src='/images/no-poster.png'"
                         style="height: 350px; object-fit: cover;">
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@filme.Titulo">
                            @filme.Titulo
                        </h5>
                        
                        <div class="mb-2">
                            @if (filme.DataLancamento.HasValue)
                            {
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>@filme.DataLancamento.Value.Year
                                </small>
                            }
                            
                            @if (filme.NotaMedia.HasValue)
                            {
                                <span class="badge bg-warning text-dark float-end">
                                    <i class="fas fa-star"></i> @filme.NotaMedia.Value.ToString("F1")
                                </span>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(filme.Genero))
                        {
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-tag me-1"></i>@filme.Genero
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(filme.CidadeReferencia))
                        {
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i>@filme.CidadeReferencia
                            </p>
                        }
                        
                        @if (filme.Duracao.HasValue)
                        {
                            <p class="card-text small text-muted">
                                <i class="fas fa-clock me-1"></i>@filme.Duracao min
                            </p>
                        }
                        
                        <div class="mt-auto pt-3">
                            <a asp-action="Detalhes" asp-route-id="@filme.Id" class="btn btn-primary btn-sm w-100 mb-2">
                                <i class="fas fa-eye me-1"></i>Ver Detalhes
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Editar" asp-route-id="@filme.Id" class="btn btn-outline-secondary btn-sm flex-fill">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Deletar" asp-route-id="@filme.Id" class="btn btn-outline-danger btn-sm flex-fill">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center py-5" role="alert">
        <i class="fas fa-inbox fa-4x mb-3 text-muted"></i>
        <h4 class="alert-heading">Seu catálogo está vazio</h4>
        <p>Você ainda não importou nenhum filme para seu catálogo pessoal.</p>
        <hr>
        <p class="mb-0">
            <a asp-controller="Busca" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Buscar e Importar Filmes
            </a>
        </p>
    </div>
}