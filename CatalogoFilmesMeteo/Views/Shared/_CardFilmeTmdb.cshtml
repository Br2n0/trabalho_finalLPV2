@model CatalogoFilmesMeteo.Models.DTOs.ResultadoFilmeTmdb
@inject CatalogoFilmesMeteo.Services.IServicoTmdbApi TmdbService

@{
    var posterUrl = TmdbService.ConstruirUrlPoster(Model.CaminhoPoster, "w300");
    var dataLancamento = !string.IsNullOrEmpty(Model.DataLancamento) 
        ? DateTime.Parse(Model.DataLancamento).Year.ToString() 
        : "N/A";
}

<div class="card h-100 shadow-sm border-0 filme-card">
    <img src="@posterUrl" 
         class="card-img-top" 
         alt="@Model.Titulo"
         onerror="this.src='/images/no-poster.png'"
         style="height: 400px; object-fit: cover;">
    
    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate" title="@Model.Titulo">
            @Model.Titulo
        </h5>
        
        <div class="mb-2">
            <small class="text-muted">
                <i class="fas fa-calendar me-1"></i>@dataLancamento
            </small>
            <span class="badge bg-warning text-dark float-end">
                <i class="fas fa-star"></i> @Model.MediaVotos.ToString("F1")
            </span>
        </div>
        
        <p class="card-text text-muted small flex-grow-1" style="max-height: 60px; overflow: hidden;">
            @(string.IsNullOrEmpty(Model.Sinopse) ? "Sem sinopse disponível" : Model.Sinopse)
        </p>
        
        <button type="button" 
                class="btn btn-primary w-100 mt-2" 
                data-bs-toggle="modal" 
                data-bs-target="#importModal@(Model.Id)">
            <i class="fas fa-download me-2"></i>Importar
        </button>
    </div>
</div>

@* Modal de Importação *@
<div class="modal fade" id="importModal@(Model.Id)" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-download me-2"></i>Importar Filme
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Busca" asp-action="Importar" method="post" id="importForm@(Model.Id)">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="tmdbId" value="@Model.Id" />
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>@Model.Titulo</strong> será importado para seu catálogo
                    </div>
                    
                    <div id="errorAlert@(Model.Id)" class="alert alert-danger d-none" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <span id="errorMessage@(Model.Id)"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Cidade de Referência (opcional)
                        </label>
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control" 
                                   name="cidade" 
                                   id="cidade@(Model.Id)"
                                   placeholder="Ex: São Paulo">
                            <button type="button" 
                                    class="btn btn-outline-secondary" 
                                    id="btnBuscarCoordenadas@(Model.Id)"
                                    title="Buscar coordenadas automaticamente">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <small class="form-text text-muted">
                            Para vincular previsão do tempo ao filme. Clique no botão de busca para preencher coordenadas automaticamente.
                        </small>
                        <div id="coordenadasStatus@(Model.Id)" class="mt-2"></div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-map-pin me-1"></i>Latitude (opcional)
                            </label>
                            <input type="number" 
                                   step="0.000001" 
                                   class="form-control" 
                                   name="latitude" 
                                   id="latitude@(Model.Id)"
                                   min="-90"
                                   max="90"
                                   placeholder="Ex: -23.5505">
                            <small class="form-text text-danger d-none" id="latError@(Model.Id)">
                                Latitude deve estar entre -90 e 90
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-map-pin me-1"></i>Longitude (opcional)
                            </label>
                            <input type="number" 
                                   step="0.000001" 
                                   class="form-control" 
                                   name="longitude" 
                                   id="longitude@(Model.Id)"
                                   min="-180"
                                   max="180"
                                   placeholder="Ex: -46.6333">
                            <small class="form-text text-danger d-none" id="lonError@(Model.Id)">
                                Longitude deve estar entre -180 e 180
                            </small>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning small mb-0">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Se não informar as coordenadas agora, você poderá adicioná-las depois na edição
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="submitBtn@(Model.Id)">
                        <i class="fas fa-check me-2"></i>Confirmar Importação
                    </button>
                </div>
            </form>

            <script>
                (function() {
                    const formId = '@Model.Id';
                    const form = document.getElementById('importForm' + formId);
                    const latInput = document.getElementById('latitude' + formId);
                    const lonInput = document.getElementById('longitude' + formId);
                    const latError = document.getElementById('latError' + formId);
                    const lonError = document.getElementById('lonError' + formId);
                    const errorAlert = document.getElementById('errorAlert' + formId);
                    const errorMessage = document.getElementById('errorMessage' + formId);
                    const submitBtn = document.getElementById('submitBtn' + formId);

                    function validateCoordinates() {
                        let isValid = true;
                        
                        // Validar latitude
                        if (latInput.value) {
                            const lat = parseFloat(latInput.value);
                            if (isNaN(lat) || lat < -90 || lat > 90) {
                                latError.classList.remove('d-none');
                                latInput.classList.add('is-invalid');
                                isValid = false;
                            } else {
                                latError.classList.add('d-none');
                                latInput.classList.remove('is-invalid');
                            }
                        } else {
                            latError.classList.add('d-none');
                            latInput.classList.remove('is-invalid');
                        }

                        // Validar longitude
                        if (lonInput.value) {
                            const lon = parseFloat(lonInput.value);
                            if (isNaN(lon) || lon < -180 || lon > 180) {
                                lonError.classList.remove('d-none');
                                lonInput.classList.add('is-invalid');
                                isValid = false;
                            } else {
                                lonError.classList.add('d-none');
                                lonInput.classList.remove('is-invalid');
                            }
                        } else {
                            lonError.classList.add('d-none');
                            lonInput.classList.remove('is-invalid');
                        }

                        return isValid;
                    }

                    latInput.addEventListener('blur', validateCoordinates);
                    lonInput.addEventListener('blur', validateCoordinates);

                    // Buscar coordenadas via Nominatim
                    const btnBuscar = document.getElementById('btnBuscarCoordenadas' + formId);
                    const cidadeInput = document.getElementById('cidade' + formId);
                    const statusDiv = document.getElementById('coordenadasStatus' + formId);

                    btnBuscar.addEventListener('click', async function() {
                        const cidade = cidadeInput.value.trim();
                        if (!cidade) {
                            statusDiv.innerHTML = '<div class="alert alert-warning mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Digite o nome da cidade primeiro.</div>';
                            return;
                        }

                        btnBuscar.disabled = true;
                        btnBuscar.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                        statusDiv.innerHTML = '<div class="alert alert-info mb-0"><i class="fas fa-spinner fa-spin me-2"></i>Buscando coordenadas...</div>';

                        try {
                            const response = await fetch(`/Busca/BuscarCoordenadas?cidade=${encodeURIComponent(cidade)}`);
                            const data = await response.json();

                            if (data.sucesso) {
                                // Converter vírgula para ponto
                                const lat = String(data.latitude).replace(',', '.');
                                const lon = String(data.longitude).replace(',', '.');
                                latInput.value = lat;
                                lonInput.value = lon;
                                statusDiv.innerHTML = '<div class="alert alert-success mb-0"><i class="fas fa-check-circle me-2"></i>Coordenadas encontradas e preenchidas automaticamente!</div>';
                                validateCoordinates();
                            } else {
                                statusDiv.innerHTML = `<div class="alert alert-warning mb-0"><i class="fas fa-exclamation-triangle me-2"></i>${data.mensagem || 'Cidade não encontrada.'}</div>`;
                            }
                        } catch (error) {
                            statusDiv.innerHTML = '<div class="alert alert-danger mb-0"><i class="fas fa-times-circle me-2"></i>Erro ao buscar coordenadas. Tente novamente.</div>';
                        } finally {
                            btnBuscar.disabled = false;
                            btnBuscar.innerHTML = '<i class="fas fa-search"></i>';
                        }
                    });

                    form.addEventListener('submit', function(e) {
                        errorAlert.classList.add('d-none');
                        
                        if (!validateCoordinates()) {
                            e.preventDefault();
                            errorMessage.textContent = 'Por favor, corrija os erros de validação antes de continuar.';
                            errorAlert.classList.remove('d-none');
                            return false;
                        }

                        // Desabilitar botão durante o envio
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Importando...';
                    });
                })();
            </script>
        </div>
    </div>
</div>