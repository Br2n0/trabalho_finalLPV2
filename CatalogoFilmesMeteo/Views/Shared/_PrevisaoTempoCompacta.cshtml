@model CatalogoFilmesMeteo.Models.DTOs.RespostaPrevisaoTempo

@if (Model.Diario != null && Model.Diario.Datas.Any())
{
    var dataHoje = DateTime.Parse(Model.Diario.Datas[0]);
    var tempMax = Model.Diario.TemperaturaMaxima[0];
    var tempMin = Model.Diario.TemperaturaMinima[0];

    <div class="card border-info mt-2">
        <div class="card-body p-2">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fas fa-cloud-sun text-info me-2"></i>
                    <small class="text-muted me-2">Previsão:</small>
                </div>
                <div class="text-end">
                    <div>
                        <span class="text-danger fw-bold">@(tempMax.HasValue ? $"{tempMax.Value:F1}°C" : "N/A")</span>
                        <small class="text-muted"> / </small>
                        <span class="text-primary fw-bold">@(tempMin.HasValue ? $"{tempMin.Value:F1}°C" : "N/A")</span>
                    </div>
                    <small class="text-muted">@dataHoje.ToString("dd/MM")</small>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-2 mb-0 p-2">
        <small><i class="fas fa-exclamation-triangle me-1"></i>Previsão não disponível</small>
    </div>
}

