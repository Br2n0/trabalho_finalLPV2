<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Catálogo de Filmes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        .navbar-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .footer-gradient {
            background: linear-gradient(135deg, #2c3e50 0%, #4a6491 100%);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-film me-2 fa-lg"></i>
                    <span class="text-gradient-light">Catálogo de Filmes</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item mx-1">
                            <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>
                                <span>Início</span>
                            </a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link d-flex align-items-center" asp-controller="Busca" asp-action="Index">
                                <i class="fas fa-search me-2"></i>
                                <span>Buscar Filmes</span>
                            </a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link d-flex align-items-center" asp-controller="Gerenciar" asp-action="Index">
                                <i class="fas fa-list me-2"></i>
                                <span>Meu Catálogo</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown mx-1">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="exportDropdown"
                                role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-download me-2"></i>
                                <span>Exportar</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Filme"
                                        asp-action="ExportCsv">
                                        <i class="fas fa-file-csv me-2"></i>Exportar CSV
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Filme"
                                        asp-action="ExportExcel">
                                        <i class="fas fa-file-excel me-2"></i>Exportar Excel
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-lg" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-check-circle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Sucesso!</h5>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-lg" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Erro!</h5>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer footer-gradient text-white mt-5 py-4">
        <div class="container text-center">
            <div class="mb-3">
                <i class="fas fa-film fa-2x me-2"></i>
            </div>
            <p class="mb-2 fw-bold">
                &copy; 2025 - Catálogo de Filmes com Previsão do Tempo
            </p>
            <p class="small text-light mb-0">
                Desenvolvido com ASP.NET Core + TMDb API + Open-Meteo API
            </p>
            <div class="mt-3">
                <small class="text-light opacity-75">
                    <i class="fas fa-code me-1"></i>por [Bruno Santos e Leidervan Ortiz]
                </small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Script para melhorar a experiência do usuário
        $(document).ready(function () {
            // Adiciona animação suave ao rolar a página
            $('a[href^="#"]').on('click', function (event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 80
                    }, 1000);
                }
            });

            // Adiciona efeito de hover nos cards
            $('.filme-card').hover(
                function () {
                    $(this).addClass('shadow-hard');
                },
                function () {
                    $(this).removeClass('shadow-hard');
                }
            );

            // Validação de formulário melhorada
            $('form').on('submit', function () {
                var $submitBtn = $(this).find('button[type="submit"]');
                $submitBtn.prop('disabled', true);
                $submitBtn.html('<span class="loading-spinner me-2"></span>Processando...');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>